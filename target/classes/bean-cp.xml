<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="ocean" class="org.Organization">
        <constructor-arg index="0" value="Hellooo nurse"/>
        <constructor-arg index="1" value="32"/>
        <property name="businessService" ref="cloudService"/>
        <property name="slogan" value="Have fun, work hard just have a life"/>
    </bean>

    <bean id="business" class="implementation.BusinessServiceImpl"/>
    <bean id="cloudService" class="implementation.CloudImpl"/>

</beans>